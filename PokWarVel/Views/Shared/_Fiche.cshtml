@model MarvelApi.Model.Characters

<div class="col-sm-4 text-center padding wow fadeIn" data-wow-duration="1000ms" data-wow-delay="300ms" onclick="function(e){return View('FichePerso', @Model);}">
    <div class="single-service cardContainer">
        <div class="wow scaleIn" data-wow-duration="500ms" data-wow-delay="300ms">
            <img class="cardPic" src="@Model.Avatar">
        </div>
        <h2 class="cardCharName">@Html.DisplayFor(modelItem => Model.name)</h2>
        <p>@Html.DisplayFor(modelItem => Model.description)</p>
    </div>
</div>

